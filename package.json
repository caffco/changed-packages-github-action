{
  "name": "@caff/changed-packages-github-action",
  "version": "0.0.1-alpha.9",
  "description": "A Github action to get the packages affected by your changesets",
  "main": "lib/index.js",
  "repository": "https://github.com/caffco/changed-packages-github-action",
  "bugs": {
    "url": "https://github.com/caffco/changed-packages-github-action/issues"
  },
  "homepage": "https://github.com/caffco/changed-packages-github-action#readme",
  "author": "Lluís Ulzurrun de Asanza i Sàez <me@llu.is>",
  "license": "MIT",
  "keywords": [
    "actions",
    "node",
    "changesets"
  ],
  "scripts": {
    "build": "run-s tsc package",
    "tsc": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "run-s format lint test build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.2",
    "@types/jest": "^27.5.0",
    "@types/node": "^15.3.1",
    "@typescript-eslint/parser": "^5.30.6",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.1.5",
    "eslint-plugin-jest": "^26.5.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-circus": "^27.5.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@changesets/get-release-plan": "^3.0.10",
    "@changesets/git": "^1.3.1",
    "@manypkg/get-packages": "^1.1.3"
  }
}
